{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "autoupdate": true,
  "permission": {
    "*": "ask",
    "external_directory": {
      "*": "ask"
    },
    "bash": {
      "*": "ask",
      "git push": "ask",
      "git *": "allow",
      "grep *": "allow",
      "npm *": "allow",
      "dotnet *": "allow",
      "dotnet tool *": "ask",
      "rm *": "deny",
      "kubectl *": "deny",
      "kubectx *": "deny",
      "az *": "deny"
    }
  },
  "lsp": {
    "julia": {
      "command": [
        "julia",
        "--project=@lsp",
        "--startup-file=no",
        "--history-file=no",
        "--depwarn=no",
        "-e",
        "using LanguageServer; runserver()"
      ],
      "extensions": [".jl"]
    }
  }
}
