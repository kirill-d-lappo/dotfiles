{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "autoupdate": true,
  "permission": {
    "git push": "ask",
    "kubectl": "ask",
    "kubectx": "ask",
    "az": "ask"
  },
  "lsp": {
    "julia": {
      "command": [
        "julia",
        "--project=@lsp",
        "--startup-file=no",
        "--history-file=no",
        "--depwarn=no",
        "-e",
        "using LanguageServer; runserver()"
      ],
      "extensions": [".jl"]
    }
  }
}
