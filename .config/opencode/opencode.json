{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "autoupdate": true,
  "enabled_providers": ["github-copilot"],
  "permission": {
    "external_directory": {
      "*": "ask",
      "/home/klappo/workspace/vopty/src/**": "allow",
      "~/workspace/vopty/src/**": "allow"
    },
    "bash": {
      "*": "ask",
      "ls *": "allow",
      "git *": "allow",
      "npm *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "rm *": "ask",
      "mv *": "ask",
      "cp *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "find *": "allow",
      "xargs *": "allow",
      "dotnet *": "allow",
      "git push": "ask",
      "dotnet tool *": "ask",
      "kubectl *": "deny",
      "az *": "deny"
    }
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      ".vscode/**",
      ".idea/**",
      "*.log",
      "**/bin/**",
      "**/obj/**",
      ".venv/**",
      "target/release/**",
      "target/debug/**",
      "out/**"
    ]
  },
  "lsp": {
    "julia": {
      "command": [
        "julia",
        "--project=@lsp",
        "--startup-file=no",
        "--history-file=no",
        "--depwarn=no",
        "-e",
        "using LanguageServer; runserver()"
      ],
      "extensions": [".jl"]
    }
  }
}
